<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_bottom_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/generalBackground"
    tools:context=".DetailToiletActivity" >

    <requestFocus />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/ad" >

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/toiletDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/generalFont"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/toiletAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:textColor="@color/generalFont"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="italic" />

            <View
                android:id="@+id/lineSeparator2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/white" />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/calificateButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rateButton"
                    android:textColor="@color/generalFont"
                    android:onClick="onCalificationButtonTapped" />
                
                <Button
                    android:id="@+id/changeCalificationButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/changeCalificationButton"
                    android:textColor="@color/generalFont"
                    android:onClick="onCalificationButtonTapped"
                    android:visibility="gone" />
                
                <RatingBar
                    android:id="@+id/ratingBar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="0.0"
                    android:stepSize="0.5" />
                                    
            </LinearLayout>
            
            <TextView
                android:id="@+id/calificationCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/generalFont"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/detailToilet_calificationCount" />

            <View
                android:id="@+id/lineSeparator1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/white" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/generalFont"
                    android:text="@string/detailToiletCheckbox1" 
                    android:clickable="false"/>

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.22"
                    android:textColor="@color/generalFont"
                    android:text="@string/detailToiletCheckbox2"
                    android:clickable="false" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.22"
                    android:textColor="@color/generalFont"
                    android:text="@string/detailToiletCheckbox3"
                    android:clickable="false" />

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.22"
                    android:textColor="@color/generalFont"
                    android:text="@string/detailToiletCheckbox4"
                    android:clickable="false" />

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.22"
                    android:textColor="@color/generalFont"
                    android:text="@string/detailToiletCheckbox5"
                    android:clickable="false" />

                <CheckBox
                    android:id="@+id/checkBox6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.22"
                    android:textColor="@color/generalFont"
                    android:text="@string/detailToiletCheckbox6"
                    android:clickable="false" />

                <CheckBox
                    android:id="@+id/checkBox7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.22"
                    android:textColor="@color/generalFont"
                    android:text="@string/detailToiletCheckbox7"
                    android:clickable="false" />

                <CheckBox
                    android:id="@+id/checkBox8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/generalFont"
                    android:text="@string/detailToiletCheckbox8"
                    android:clickable="false" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/commentsButton"
                    android:layout_weight="1.0"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:textColor="@color/generalFont"
                    android:text="@string/detailToilet_commentsButton"
                    android:onClick="onCommentsButtonTapped" />

                <Button
                    android:id="@+id/galeryButton"
                    android:layout_weight="1.0"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:textColor="@color/generalFont"
                    android:text="@string/detailToilet_galeryButton"
                    android:onClick="onGaleryButtonTapped" />

            </LinearLayout>

        </LinearLayout>
        
    </ScrollView>

    <com.google.ads.AdView
        xmlns:googleads="http://schemas.android.com/apk/lib/com.google.ads"
        android:id="@+id/ad"
        android:layout_width="fill_parent"
   		android:layout_height="wrap_content"
    	android:layout_alignLeft="@+id/scrollView1"
    	android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/admob_id"
        googleads:loadAdOnCreate="true"
        googleads:testDevices="@string/testDeviceId" >
    </com.google.ads.AdView>

</RelativeLayout>