<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="socialtoilet.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="socialtoilet.android.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" >
    </permission>

    <uses-permission android:name="socialtoilet.android.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
         The following two permissions are not required to use
	     Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- 1. The API needs to use OpenGL v2 to use Google Maps Android API v2. -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="socialtoilet.android.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 1. The API key settings to use Google Maps Android API v2. -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBJSkpzarLKmH04WJvnOJOCKXz8CeOMQ18" />

        <activity
            android:name="socialtoilet.android.MappingToiletActivity"
            android:label="@string/title_activity_mapping_toilet"
            android:parentActivityName="socialtoilet.android.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="socialtoilet.android.MainActivity" />
        </activity>
        <activity
            android:name="socialtoilet.android.DetailToiletActivity"
            android:label="@string/title_activity_detail_toilet"
            android:parentActivityName="socialtoilet.android.MappingToiletActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="socialtoilet.android.MappingToiletActivity" />
        </activity>
        <activity
            android:name="socialtoilet.android.AddToiletActivity"
            android:label="@string/title_activity_add_toilet"
            android:parentActivityName="socialtoilet.android.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="socialtoilet.android.MainActivity" />
        </activity>
        
        <activity android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
            
    </application>

</manifest>
