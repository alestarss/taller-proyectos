<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
	<item android:state_pressed="true" >
  	    <shape 
		    	xmlns:android="http://schemas.android.com/apk/res/android"
		    	android:shape="rectangle" >
		  	<corners android:radius="3dp" />
			<solid android:color="@color/social_toilet_button_pressed"/>
		    <padding android:left="7dp"
		        android:top="7dp"
		        android:right="7dp"
		        android:bottom="7dp" />
		</shape>
  	</item>
  	
	<item android:state_focused="true" >
  	    <shape 
		    	xmlns:android="http://schemas.android.com/apk/res/android"
		   		android:shape="rectangle" >
		  	<corners android:radius="3dp" />
			<solid android:color="@color/social_toilet_button_on_focus"/>
		    <padding android:left="7dp"
		        android:top="7dp"
		        android:right="7dp"
		        android:bottom="7dp" />
		</shape>
  	</item>
  	
	<item>
  	    <shape 
		    	xmlns:android="http://schemas.android.com/apk/res/android"
		    	android:shape="rectangle" >
	  		<corners android:radius="3dp" />
			<solid android:color="@color/generalBackground"/>
		    <padding android:left="7dp"
		        android:top="7dp"
		        android:right="7dp"
		        android:bottom="7dp" />
		</shape>
  	</item>

</selector>
