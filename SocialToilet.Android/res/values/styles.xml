<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SocialToiletButton" parent="">
        <item name="android:textColor">@color/generalFont</item>
        <item name="android:background">@drawable/st_button_border</item>
    </style>

	<style name="SocialToiletEditText" parent="">
		<item name="android:cursorVisible">true</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:background">@color/generalBackground</item>
	</style>

    <style name="SocialToiletRatingBar" parent="">
        <item name="android:progressDrawable">@drawable/st_rating_bar</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="socialToiletEraseCommentButton" parent="">
        <item name="android:textColor">@color/generalFont</item>
        <item name="android:background">@drawable/st_button_erase_comment_border</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>
